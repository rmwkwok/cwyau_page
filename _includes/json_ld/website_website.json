{
  "@type": "WebSite",
  "@id": {{ '/' | absolute_url | append: '#website' | jsonify }},
  "url": {{ '/' | absolute_url | jsonify }},
  "name": {{ site.title | jsonify }},
  "inLanguage": {{ site.locale | default: zh-HK | jsonify }},
  "publisher": { "@id": {{ '/' | absolute_url | append: '#person' | jsonify }} }
}